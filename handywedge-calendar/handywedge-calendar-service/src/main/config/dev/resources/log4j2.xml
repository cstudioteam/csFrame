<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
  <Properties>
    <Property name="catalina_home">/opt/cwr/dev</Property>
    <Property name="app_id">hw-cal</Property>
    <Property name="pattern">
      <![CDATA[%date{yyyy-MM-dd HH:mm:ss.SSS}\t[%-5p %t]\t[${app_id}]\t%mdc{requestId}\t%c{2}\t%m%n]]>
    </Property>
  </Properties>
  <Appenders>
    <Console
        name="console"
        target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>
    <RollingFile
        name="${app_id}"
        fileName="${catalina_home}/logs/${app_id}.log"
        filePattern="${catalina_home}/logs/archive/${app_id}_%d{yyyy-MM-dd}.log">
      <PatternLayout
          pattern="${pattern}"
          charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
      </Policies>
      <DefaultRolloverStrategy max="30"/>
    </RollingFile>
  </Appenders>
  <Loggers>
    <Logger
        name="com.handywedge"
        level="info">
      <AppenderRef ref="${app_id}"/>
    </Logger>
    <Logger
        name="com.microsoft.graph"
        level="info"
        additivity="false">
      <AppenderRef ref="${app_id}"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="console"/>
    </Root>
  </Loggers>
</Configuration>